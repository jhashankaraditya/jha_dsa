#define ll long long
class Solution {
public:
    int maxBalancedShipments(vector<int>& weight) {
        ll int n=weight.size(), maxShipments=0;
        for (ll int i=0; i<n-1; i++) {
            if (weight[i]>weight[i+1]) {
                maxShipments++;
                i++;
            }
        }
        return maxShipments;
    }
};
