class Solution {
public:
    vector<vector<int>> reverseSubmatrix(vector<vector<int>>& grid, int x, int y, int k) {
        int n=grid.size(), m=grid[0].size();
        for (int i=y; i<y+k; i++) {
            int up_idx=x, low_idx=x+k-1;
            while (up_idx<low_idx) {
                swap(grid[up_idx][i],grid[low_idx][i]);
                up_idx++;
                low_idx--;
            }
        }
        return grid;
    }
};
