class Solution {
public:
    int absDifference(vector<int>& nums, int k) {
        int n=nums.size();
        sort(nums.begin(),nums.end());
        int maxKSum=0, minKSum=0;
        for (int i=0; i<k; i++) {
            minKSum+=nums[i];
            maxKSum+=nums[n-i-1];
        }
        return abs(maxKSum-minKSum);
    }
};
