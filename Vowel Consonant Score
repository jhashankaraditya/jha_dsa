class Solution {
public:
    int vowelConsonantScore(string s) {
        int vowels=0, consonants=0;
        for (int i=0; i<s.size(); i++) {
            if (s[i]=='a' || s[i]=='e' || s[i]=='i' || s[i]=='o' || s[i]=='u') {
                vowels++;
            }
            else if (s[i]>='a' && s[i]<='z') {
                consonants++;
            }
        }
        if (consonants==0) {
            return 0;
        }
        return vowels/consonants;
    }
};
