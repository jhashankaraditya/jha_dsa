class Solution {
public:
    int countSegments(string s) {
        int segments=0;
        bool wordDone=false;
        for (int i=0; i<s.size(); i++) {
            if (s[i]!=' ') {
                wordDone=true;
            }
            else if (wordDone) {
                segments++;
                wordDone=false;
            }
        }
        if (s[s.size()]!=' ' && wordDone) {
            segments++;
        }
        return segments;
    }
};
