class Solution {
    int solvemem(int n, vector<int> &dp) {
        if (n==0) {
            return 0;
        }
        if (dp[n]!=-1) {
            return dp[n];
        }
        int min_ways=INT_MAX;
        for (int i=1; i*i<=n; i++) {
            min_ways=min(min_ways,solvemem(n-i*i,dp));
        }
        return dp[n]=1+min_ways;
    }
public:
    int numSquares(int n) {
        vector<int> dp(n+1,-1);
        return solvemem(n,dp);
    }
};
