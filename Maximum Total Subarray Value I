#define ll long long
class Solution {
public:
    long long maxTotalValue(vector<int>& nums, int k) {
        ll int maxi=LLONG_MIN, mini=LLONG_MAX;
        for (ll int i=0; i<nums.size(); i++) {
            ll int num=nums[i];
            maxi=max(maxi,num);
            mini=min(mini,num);
        }
        ll int mul=k;
        return (maxi-mini)*mul;
    }
};
