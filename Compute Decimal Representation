class Solution {
public:
    vector<int> decimalRepresentation(int n) {
        vector<int> ans;
        string n_str=to_string(n);
        for (int i=0; i<n_str.size(); i++) {
            if (n_str[i]!='0') {
                int zeros=n_str.size()-1-i, digit=n_str[i]-'0';
                int mul=pow(10,zeros);
                ans.push_back(mul*digit);
            }
        }
        return ans;
    }
};
