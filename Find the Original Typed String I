class Solution {
    public int possibleStringCount(String word) {
        int possible_strings=1, len=1;
        for (int i=1; i<word.length(); i++) {
            if (word.charAt(i-1)==word.charAt(i)) {
                len++;
            }
            else {
                possible_strings+=(len-1);
                len=1;
            }
        }
        if (len>1) {
            possible_strings+=(len-1);
        }
        return possible_strings;
    }
}
