class Solution {
public:
    int countPrimes(int n) {
        vector<bool> isPrime(n+1);
        for (int i=2; i<n; i++) {
            isPrime[i]=1;
        }
        int primes=0;
        for (long long int i=2; i<n; i++) {
            if (!isPrime[int(i)]) {
                continue;
            }
            primes++;
            for (long long int j=i*i; j<n; j+=i) {
                isPrime[int(j)]=0;
            }
        }
        return primes;
    }
};
