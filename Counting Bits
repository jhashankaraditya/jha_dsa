class Solution {
public:
    vector<int> countBits(int n) {
        vector<int> bit_count(n+1);
        int num=0;
        while (num<=n) {
            int bits=0;
            int temp=num;
            while (temp>0) {
                if (temp&1)
                    bits++;
                temp=temp>>1;
            }bit_count[num]=bits;
            num++;
        }return bit_count;
    }
};
