class Solution {
public:
    int countPartitions(vector<int>& nums) {
        int partitions=0, left_sum=0, right_sum=0;
        for (int i=0; i<nums.size(); i++) {
            right_sum+=nums[i];
        }
        for (int i=0; i<nums.size(); i++) {
            left_sum+=nums[i];
            right_sum-=nums[i];
            int diff=right_sum-left_sum;
            if (diff%2==0) {
                partitions++;
            }
        }
        return partitions;
    }
};
